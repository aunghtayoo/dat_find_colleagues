<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/option_bs"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:elevation="16dp"
    android:fitsSystemWindows="true"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_medium_3"
            android:paddingRight="@dimen/margin_medium_3">

            <ImageView
                android:id="@+id/btnCall"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="@dimen/margin_medium_2"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/margin_medium_2"
                android:layout_marginBottom="@dimen/margin_medium_2"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/theme_font"
                android:src="@drawable/call_outgoing"
                android:text="Call"
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_heading_1x" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/lblValCall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/theme_font"
                    android:paddingLeft="@dimen/margin_small"
                    android:text="Aung Htay Oo"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/text_heading_1x"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblValCallPhoneNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblValCall"
                    android:fontFamily="@font/theme_font"
                    android:paddingLeft="@dimen/margin_small"
                    android:text="09 872505555"
                    android:layout_marginTop="@dimen/margin_small"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/text_heading" />

            </LinearLayout>

            <TextView
                android:id="@+id/lblDistanceVal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/margin_medium_2"
                android:layout_marginRight="@dimen/margin_medium_2"
                android:fontFamily="@font/theme_font"
                android:paddingRight="@dimen/margin_small"
                android:text="0.2 km"
                android:textColor="@color/color_green"
                android:textSize="@dimen/text_heading"
                android:textStyle="bold"
                android:visibility="gone" />

        </RelativeLayout>

        <Button
            android:id="@+id/btnOptionCall"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_margin="@dimen/margin_medium_2"
            android:backgroundTint="@color/color_green"
            android:text="Call"
            android:textColor="@color/color_white"
            android:textStyle="bold"
            android:visibility="gone"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>