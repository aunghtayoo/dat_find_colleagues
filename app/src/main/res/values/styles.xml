<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MatTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="input_layout_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxBackgroundColor">@color/color_white</item>
        <item name="fontFamily">@font/theme_font</item>
    </style>

    <style name="BlackText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/color_white</item>
        <item name="fontFamily">@font/theme_font</item>
        <item name="background">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/margin_tiny</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

</resources>